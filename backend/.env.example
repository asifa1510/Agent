# Environment variables for Sentiment Trading Agent

# API Configuration
DEBUG=false

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# DynamoDB Tables
SENTIMENT_TABLE=sentiment-scores
PREDICTIONS_TABLE=predictions
TRADES_TABLE=trades
EXPLANATIONS_TABLE=explanations
PORTFOLIO_TABLE=portfolio

# Kinesis Streams
SOCIAL_MEDIA_STREAM=social-media
FINANCIAL_NEWS_STREAM=financial-news
MARKET_DATA_STREAM=market-data

# SageMaker Endpoints
BERT_ENDPOINT=sentiment-bert-endpoint
LSTM_ENDPOINT=price-lstm-endpoint
XGBOOST_ENDPOINT=price-xgboost-endpoint

# Risk Management
MAX_POSITION_ALLOCATION=0.05
STOP_LOSS_THRESHOLD=0.02

# External APIs
TWITTER_BEARER_TOKEN=your_twitter_token_here
NEWS_API_KEY=your_news_api_key_here

# API Rate Limits (requests per minute)
TWITTER_RATE_LIMIT=20
NEWS_API_RATE_LIMIT=30
YAHOO_FINANCE_RATE_LIMIT=60